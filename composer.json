{
    "name": "nowo-tech/code-review-guardian",
    "description": "Provider-agnostic code review guardian for PHP projects. Works with any PHP project (Symfony, Laravel, Yii, CodeIgniter, etc.) and any Git provider (GitHub, GitLab, Bitbucket, etc.)",
    "type": "composer-plugin",
    "license": "MIT",
    "keywords": [
        "code-review",
        "code-quality",
        "guardian",
        "php",
        "symfony",
        "laravel",
        "github",
        "gitlab",
        "bitbucket",
        "ci",
        "quality-assurance"
    ],
    "homepage": "https://github.com/nowo-tech/code-review-guardian",
    "support": {
        "issues": "https://github.com/nowo-tech/code-review-guardian/issues",
        "source": "https://github.com/nowo-tech/code-review-guardian"
    },
    "authors": [
        {
            "name": "HÃ©ctor Franco Aceituno",
            "email": "hectorfranco@nowo.tech",
            "homepage": "https://github.com/HecFranco",
            "role": "Developer"
        },
        {
            "name": "Nowo.tech",
            "homepage": "https://nowo.tech"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "phpunit/phpunit": "^9.6 || ^10.0 || ^11.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "nowo-tech/composer-update-helper": "Keep your dependencies up to date. Works perfectly with Code Review Guardian to ensure both code quality and dependency management."
    },
    "autoload": {
        "psr-4": {
            "NowoTech\\CodeReviewGuardian\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NowoTech\\CodeReviewGuardian\\Tests\\": "tests/"
        }
    },
    "files": [
        "bin/code-review-guardian.sh",
        "config",
        "docs/GGA.md"
    ],
    "extra": {
        "class": "NowoTech\\CodeReviewGuardian\\Plugin",
        "branch-alias": {
            "dev-main": "0.0.1-dev"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "qa": [
            "@cs-check",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "test-coverage": "Run PHPUnit tests with code coverage",
        "cs-check": "Check code style with PHP-CS-Fixer",
        "cs-fix": "Fix code style with PHP-CS-Fixer",
        "qa": "Run all quality assurance checks"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

